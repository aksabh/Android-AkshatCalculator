<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/img4"
    >


    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="40dp"
        android:id="@+id/zero"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/dot"
        android:onClick="onClickNumber"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="."
        android:textSize="40dp"
        android:id="@+id/dot"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/zero"
        android:layout_toEndOf="@+id/zero"
        android:onClick="onClickNumber"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="="
        android:textSize="40dp"
        android:id="@+id/equal"
        android:background="@color/abc_search_url_text_normal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickNumber"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:textSize="40dp"
        android:id="@+id/one"
        android:layout_above="@+id/zero"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickNumber"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:textSize="40dp"
        android:id="@+id/two"
        android:layout_above="@+id/zero"
        android:layout_toLeftOf="@+id/dot"
        android:layout_toStartOf="@+id/dot"
        android:onClick="onClickNumber"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:textSize="40dp"
        android:id="@+id/three"
        android:layout_above="@+id/dot"
        android:layout_toRightOf="@+id/zero"
        android:layout_toEndOf="@+id/zero"
        android:onClick="onClickNumber"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="+"
        android:textSize="40dp"
        android:id="@+id/plus"
        android:layout_above="@+id/equal"
        android:layout_alignLeft="@+id/equal"
        android:layout_alignStart="@+id/equal"
        android:onClick="onClickNumber"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:textSize="40dp"
        android:id="@+id/four"
        android:layout_above="@+id/one"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickNumber"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5"
        android:textSize="40dp"
        android:id="@+id/five"
        android:layout_above="@+id/two"
        android:layout_alignLeft="@+id/two"
        android:layout_alignStart="@+id/two"
        android:onClick="onClickNumber"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:textSize="40dp"
        android:id="@+id/six"
        android:layout_above="@+id/two"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two"
        android:onClick="onClickNumber"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="-"
        android:textSize="40dp"
        android:id="@+id/minus"
        android:layout_alignTop="@+id/six"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickNumber"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:textSize="40dp"
        android:id="@+id/seven"
        android:layout_above="@+id/four"
        android:layout_toLeftOf="@+id/five"
        android:layout_toStartOf="@+id/five"
        android:onClick="onClickNumber"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8"
        android:textSize="40dp"
        android:id="@+id/eight"
        android:layout_above="@+id/five"
        android:layout_toLeftOf="@+id/six"
        android:layout_toStartOf="@+id/six"
        android:onClick="onClickNumber"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="9"
        android:textSize="40dp"
        android:id="@+id/nine"
        android:layout_below="@+id/clear"
        android:layout_toRightOf="@+id/eight"
        android:layout_toEndOf="@+id/eight"
        android:onClick="onClickNumber"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="*"
        android:textSize="40dp"
        android:id="@+id/multiply"
        android:layout_above="@+id/six"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickNumber"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:text="C"
        android:id="@+id/clear"
        android:textSize="40dp"
        android:layout_above="@+id/seven"
        android:layout_alignLeft="@+id/seven"
        android:layout_alignStart="@+id/seven"
        android:background="@color/abc_search_url_text_normal"
        android:layout_toStartOf="@+id/division"
        android:layout_alignRight="@+id/nine"
        android:layout_alignEnd="@+id/nine"
        android:onClick="onClickNumber"
        android:clickable="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="/"
        android:textSize="40dp"
        android:id="@+id/division"
        android:layout_above="@+id/multiply"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickNumber"/>



    <TextView
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="0"
        android:textSize="55dp"
        android:id="@+id/display"
        android:gravity="right"

        android:layout_above="@+id/division"
        android:layout_alignLeft="@+id/clear"
        android:layout_alignStart="@+id/clear"
        android:layout_alignRight="@+id/division"
        android:layout_alignEnd="@+id/division" />
</RelativeLayout>
